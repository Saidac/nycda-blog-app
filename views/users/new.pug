extends ../app.pug
block content
  br
  .container
    .row
      .col-xs-6.offset-xs-3
        h3 Register a user
        hr
        form(action="/users" method="POST")
          .form-group
            label(for="user-email") Email
            input(name="email" class="form-control" id="user-email")
          .form-group
            label(for="entry-slug") Password
            input(name="password" type="password" class="form-control" id="user-password")
          .form-group.text-xs-right
            button(type="submit" class="btn btn-lg btn-secondary btn-sm") Register

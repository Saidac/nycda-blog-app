extends ../app.pug
block content
  br
  .container
    .row
      .col-xs-8.offset-xs-2
        h3 Write a new blog entry
        hr
        form(action="/admin/entries" method="POST")
          .form-group
            label(for="entry-title") Title
            input(name="title" class="form-control" id="entry-title")
          .form-group
            label(for="entry-slug") Slug
            input(name="slug" class="form-control" id="entry-slug")
          .form-group
            label(for="entry-content") Content
            textarea(name="content" rows=10 class="form-control" id="entry-content")
          div(class="form-group text-xs-right")
            button(type="submit" class="btn btn-lg btn-secondary") Post

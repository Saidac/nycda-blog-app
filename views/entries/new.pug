extends ../app.pug

block content
  .container
    .row
      .col-xs-8.offset-xs-2
        h1 Write a blog entry
        hr
        form(action="/admin/postentry" method="POST")
          div(class="form-group")
            label(for="entry-title") Title
            input(name="title" class="form-control" id="entry-title")
          div(class="form-group")
            label(for="entry-content") Content
            textarea(name="content" type="text" rows=5 class="form-control" id="entry-content")
          div(class="form-group text-xs-right")
            button(type="submit" class="btn btn-lg btn-secondary") Post
